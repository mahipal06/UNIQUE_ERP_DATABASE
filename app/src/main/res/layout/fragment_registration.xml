<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACB177"
    tools:context=".registration">

    <ImageView
        android:layout_width="388dp"
        android:layout_height="157dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/registration"/>

    <TextView
        android:layout_width="193dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:text="Registered with us"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/person"
        android:hint="  name"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="320dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/email"
        android:gravity="center_horizontal"
        android:hint="Email"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="390dp"
        android:drawableLeft="@drawable/contact"
        android:drawableTint="@color/black"
        android:gravity="center_horizontal"
        android:hint="Mobile"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/course"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="390sp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/menu_book"
        android:gravity="center_horizontal"
        android:hint=" Course Applied for"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/message"
        android:layout_width="365sp"
        android:layout_height="150dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="5dp"
        android:hint="Message" />

    <Button
        android:id="@+id/save"
        android:layout_width="125dp"
        android:layout_height="45sp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="630dp"
        android:background="#C53062"
        android:text="submit"
        android:textColor="@color/black" />




</FrameLayout>